@model Infrastructure.UserModel.Models.ManageViewModels.ChangePasswordViewModel

<div class="container-fluid form-horizontal">
    <h2>{{language.changePassword.caption| capitalize}}</h2>

    <hr/>
    <div class="form-group">
        <label class="col-md-2 control-label"> {{language.oldPassword.caption| capitalize}}</label>
        <div class="col-md-10">
            <input type="password" name="input" ng-model="password.oldPassword"
                   class="form-control" required>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"> {{language.newPassword.caption| capitalize}}</label>
        <div class="col-md-10">
            <input type="password" name="input" ng-model="password.newPassword"
                   class="form-control" required>
        </div>
    </div>
    <div class="form-group">

        <label class="col-md-2 control-label"> {{language.confirmPassword.caption| capitalize}}</label>
        <div class="col-md-10">
            <input type="password" name="input" ng-model="password.confirmPassword"
                   required class="form-control ">
        </div>
    </div>

    <div class="form-group" ng-if="success">
        <div class="text-success  col-md-offset-1 col-md-11"> {{language.passwordUpdated.caption| capitalize}}</div>
    </div>
    <div class="form-group" ng-if="password.newPassword!==password.confirmPassword">
        <div class=" text-danger  col-md-offset-1 col-md-11"> {{language.passwordMissMatch.caption| capitalize}}</div>

    </div>
    <div class="form-group" ng-if="incorrectpassword">
        <div class=" text-danger  col-md-offset-1 col-md-11"> {{language.incorrectpassword.caption| capitalize}}</div>
    </div>

    <div class="form-group" ng-if="passwordRequiresDigit">
        <div class=" text-danger  col-md-offset-1 col-md-11"> {{language.passwordRequiresDigit.caption| capitalize}}</div>
    </div>

    <div class="form-group" ng-if="passwordRequiresNonAlphanumeric">
        <div class=" text-danger  col-md-offset-1 col-md-11"> {{language.passwordRequiresNonAlphanumeric.caption| capitalize}}</div>
    </div>

    <div class="form-group" ng-if="passwordTooShort">
        <div class=" text-danger  col-md-offset-1 col-md-11"> {{language.passwordTooShort.caption| capitalize}}</div>
    </div>

    <div class="form-group" ng-if="passwordRequiresLower">
        <div class=" text-danger  col-md-offset-1 col-md-11"> {{language.passwordRequiresLower.caption| capitalize}}</div>
    </div>

    <div class="form-group" ng-if="passwordRequiresUpper">
        <div class=" text-danger  col-md-offset-1 col-md-11"> {{language.passwordRequiresUpper.caption| capitalize}}</div>
    </div>

    <div class="form-group" ng-if="genericError">
        <div class=" text-danger  col-md-offset-1 col-md-11"> {{language.genericError.caption| capitalize}}</div>

    </div>


    <div class="form-group" ng-if="password.newPassword.length> 0">

        <div class=" col-md-offset-11 col-md-1" ng-if="password.newPassword===password.confirmPassword">
            <button type="button" class="btn btn-primary pull-right" ng-click="changePassword()">{{language.update.caption| capitalize}}</button>

        </div>

    </div>

</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}